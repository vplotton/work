clean:
	#make -C libft/ clean
	rm -f $(OBJS)

fclean: clean
	#make -C libft/ fclean
	rm -f $(NAME)

re: fclean all

debug: fclean
	$(CC) -g3 $(CFLAGS) $(SRCS) -L libft/ -lft
	gdb $(NAME)

.PHONY: all clean re fclean
